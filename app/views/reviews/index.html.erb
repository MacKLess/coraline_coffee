<% if @product %>
  <h1>Reviews of <%= @product.blend_name %></h1>

  <p><%= link_to "Leave a Review", new_product_review_path(@product) %></p>
<% else %>
  <h1>Reviews</h1>
<% end %>

<% if @reviews.any? %>
  <ul>
    <%= @reviews.each do |review| %>
      <li><%= link_to "#{review.product.blend_name} by #{review.user}", review_path(review) %></li>
    <% end %>
  </ul>
<% else %>
  <h3>There are no reviews saved.</h3>
<% end %>
