<%= render 'layouts/errors', object => @product  %>

<%= form_for @product do |f| %>
  <div class="form-group">
    <%= f.label :blend_name, class: "control-label" %>
    <%= f.text_field :blend_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :origin, class: "control-label" %>
    <%= f.text_field :origin, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cost, class: "control-label" %>
    <%= f.number_field :cost, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :variety, class: "control-label" %>
    <%= f.text_field :variety, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :notes, class: "control-label" %>
    <%= f.text_field :notes, class: "form-control" %>
  </div>
  <%= f.submit class: "btn" %>
<% end %>
